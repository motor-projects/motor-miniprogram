/* components/motorcycle-card/motorcycle-card.wxss */
.motorcycle-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.motorcycle-image {
  width: 100%;
  height: 200rpx;
}

.card-content {
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.motorcycle-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.motorcycle-year {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

.motorcycle-price {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
}

.motorcycle-specs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.spec-item {
  font-size: 20rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.card-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 16rpx;
  color: #e5e5e5;
}

.star.filled {
  color: #f59e0b;
}

.rating-text {
  font-size: 20rpx;
  color: #999;
}

.card-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 20rpx;
  color: #666;
}

.favorite-btn.favorited .action-icon {
  color: #ef4444;
}

.compare-btn .action-icon {
  font-size: 16rpx;
}