# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=Motor Performance System
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_APP_DESCRIPTION=Motorcycle performance data management system

# Cache Configuration
VITE_CACHE_TIME=300000
VITE_STALE_TIME=60000

# Cloudinary Configuration (for direct image upload)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_preset
VITE_CLOUDINARY_API_KEY=your_api_key

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADMIN_PANEL=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_ITEMS_PER_PAGE=20
VITE_IMAGE_QUALITY=80

# Authentication
VITE_AUTH_TOKEN_KEY=motor_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=motor_refresh_token

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_DEBOUNCE_DELAY=300

# Social Media (for sharing)
VITE_TWITTER_HANDLE=@motor_team
VITE_FACEBOOK_APP_ID=

# Map Configuration (if using maps)
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_ACCESS_TOKEN=

# Development
VITE_ENABLE_MOCK_DATA=false
VITE_SHOW_GRID_OVERLAY=false
VITE_DEBUG_MODE=false