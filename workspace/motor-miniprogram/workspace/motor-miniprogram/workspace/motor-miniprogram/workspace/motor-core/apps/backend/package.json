{
  "name": "@motor-projects/motor-backend",
  "version": "1.0.0",
  "description": "Backend API for motorcycle performance system",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon index.js",
    "start": "NODE_ENV=production node index.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node scripts/seed.js",
    "migration": "node scripts/migration.js",
    "scraper:cycleworld": "python scripts/cycleworld_scraper.py",
    "scraper:motorcyclecom": "python scripts/motorcycle_com_scraper.py",
    "scraper:all": "python scripts/main_scraper.py",
    "data:manage": "python scripts/data_manager.py"
  },
  "dependencies": {
    "@motor-projects/motor-shared": "file:../motor-shared",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.4-lts.1",
    "nodemailer": "^6.9.7",
    "rate-limit-redis": "^4.1.0",
    "redis": "^4.6.10",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/utils/swagger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
