/* pages/detail/detail.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 图片轮播 */
.image-swiper {
  height: 500rpx;
}

.detail-image {
  width: 100%;
  height: 100%;
}

/* 基本信息 */
.basic-info {
  margin-bottom: 20rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.title-section {
  flex: 1;
}

.motorcycle-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.motorcycle-year {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx;
}

.action-btn .icon {
  font-size: 28rpx;
  color: #666;
}

.action-btn .icon.favorited {
  color: #ef4444;
}

.action-btn .label {
  font-size: 20rpx;
  color: #666;
}

.price-section {
  margin-bottom: 20rpx;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.price-value {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: bold;
}

.rating-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.rating-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.score {
  font-size: 32rpx;
  color: #f59e0b;
  font-weight: bold;
}

.stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 20rpx;
  color: #e5e5e5;
}

.star.filled {
  color: #f59e0b;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.rating-link {
  font-size: 24rpx;
  color: #3b82f6;
}

.quick-specs {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.spec-label {
  font-size: 24rpx;
  color: #666;
}

.spec-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 导航标签 */
.nav-tabs {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #3b82f6;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #3b82f6;
  border-radius: 2rpx;
}

/* 内容区域 */
.content-section {
  margin-bottom: 20rpx;
}

/* 技术参数 */
.spec-group {
  margin-bottom: 20rpx;
}

.group-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.spec-list {
  display: flex;
  flex-direction: column;
}

.spec-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.spec-row:last-child {
  border-bottom: none;
}

.spec-name {
  font-size: 28rpx;
  color: #666;
  flex: 0 0 200rpx;
}

.spec-content {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
}

/* 配置特点 */
.features-grid {
  margin-bottom: 20rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  color: #10b981;
  font-size: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

.colors-section {
  margin-bottom: 20rpx;
}

.color-list {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.color-swatch {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e5e5;
}

.color-name {
  font-size: 22rpx;
  color: #666;
}

/* 评价 */
.reviews-summary {
  margin-bottom: 20rpx;
}

.summary-header {
  margin-bottom: 24rpx;
}

.overall-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.rating-score {
  font-size: 48rpx;
  color: #f59e0b;
  font-weight: bold;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #666;
}

.rating-breakdown {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.breakdown-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.breakdown-label {
  font-size: 24rpx;
  color: #666;
  width: 80rpx;
}

.breakdown-bar {
  flex: 1;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.breakdown-fill {
  height: 100%;
  background-color: #f59e0b;
  transition: width 0.3s;
}

.breakdown-score {
  font-size: 24rpx;
  color: #333;
  width: 40rpx;
  text-align: right;
}

.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.review-item {
  padding: 24rpx;
}

.review-header {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.review-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 4rpx;
  display: block;
}

.review-rating {
  display: flex;
  gap: 2rpx;
  margin-bottom: 4rpx;
}

.review-date {
  font-size: 22rpx;
  color: #999;
}

.review-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  overflow-x: auto;
}

.review-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.review-actions {
  display: flex;
  gap: 24rpx;
}

.helpful-btn {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.helpful-btn.active {
  color: #3b82f6;
  background-color: #e6f3ff;
}

/* 对比 */
.compare-section {
  margin-bottom: 20rpx;
}

.compare-current {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.compare-image {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
}

.compare-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.compare-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.compare-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 1rpx solid #e5e5e5;
  background-color: #fff;
  color: #333;
}

.compare-btn.primary {
  background-color: #3b82f6;
  color: #fff;
  border-color: #3b82f6;
}

.compare-similar {
  margin-top: 32rpx;
}

.similar-list {
  white-space: nowrap;
  padding: 16rpx 0;
}

.similar-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 16rpx;
  vertical-align: top;
}

.similar-item:last-child {
  margin-right: 0;
}

.similar-image {
  width: 100%;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.similar-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.similar-price {
  font-size: 22rpx;
  color: #ef4444;
  font-weight: bold;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.outline {
  background-color: #fff;
  color: #3b82f6;
  border: 1rpx solid #3b82f6;
}

.action-btn.primary {
  background-color: #3b82f6;
  color: #fff;
}

/* 加载和空状态 */
.load-more-reviews {
  text-align: center;
  padding: 40rpx;
}

.load-more-btn {
  color: #3b82f6;
  font-size: 28rpx;
}

.empty-reviews {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}