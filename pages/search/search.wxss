/* pages/search/search.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索头部 */
.search-header {
  background-color: #fff;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  flex: 1;
  position: relative;
}

.search-input {
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 100rpx 0 30rpx;
  font-size: 28rpx;
}

.search-actions {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.search-btn {
  font-size: 28rpx;
  color: #3b82f6;
  padding: 8rpx 16rpx;
}

.cancel-btn {
  font-size: 28rpx;
  color: #333;
}

/* 搜索建议 */
.search-suggestions {
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  font-size: 24rpx;
  color: #999;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 搜索内容 */
.search-content {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-all {
  font-size: 24rpx;
  color: #666;
}

/* 搜索历史 */
.history-section {
  margin-bottom: 40rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  position: relative;
  padding-right: 40rpx;
}

.remove-tag {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 18rpx;
  color: #999;
}

/* 热门搜索 */
.hot-section {
  margin-bottom: 40rpx;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  background-color: #fff;
  border: 1rpx solid #e5e5e5;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #333;
}

/* 热门品牌 */
.brands-section {
  margin-bottom: 40rpx;
}

.brands-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.brand-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.brand-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
}

.brand-name {
  font-size: 22rpx;
  color: #333;
}

/* 搜索结果 */
.search-results {
  flex: 1;
}

.filter-bar {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 0 16rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
}

.result-count {
  flex: 1;
  text-align: right;
}

.result-count text {
  font-size: 24rpx;
  color: #666;
}

/* 摩托车列表 */
.motorcycle-list {
  padding: 20rpx;
}

.motorcycle-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  position: relative;
}

.motorcycle-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.motorcycle-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.motorcycle-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.motorcycle-year {
  font-size: 22rpx;
  color: #999;
}

.motorcycle-price {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.motorcycle-specs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.spec-item {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 16rpx;
  color: #e5e5e5;
}

.star.filled {
  color: #f59e0b;
}

.rating-text {
  font-size: 22rpx;
  color: #999;
}

.action-buttons {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.favorite-btn, .compare-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.favorite-btn.favorited {
  color: #ef4444;
}

.compare-btn {
  font-size: 20rpx;
}

/* 面板 */
.sort-panel, .filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.panel-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.panel-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.panel-close {
  font-size: 28rpx;
  color: #666;
}

/* 排序选项 */
.sort-options {
  padding: 20rpx 0;
}

.sort-option {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.sort-option.active {
  background-color: #f0f9ff;
}

.option-text {
  font-size: 28rpx;
  color: #333;
}

.sort-option.active .option-text {
  color: #3b82f6;
  font-weight: bold;
}

.option-check {
  font-size: 24rpx;
  color: #3b82f6;
}

/* 筛选内容 */
.filter-content {
  max-height: 60vh;
  padding: 20rpx;
}

.filter-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  background-color: #f5f5f5;
  border: 1rpx solid #e5e5e5;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-option.selected {
  background-color: #3b82f6;
  color: #fff;
  border-color: #3b82f6;
}

.price-range {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.price-slider {
  margin-bottom: 20rpx;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}

.reset-btn, .apply-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #333;
}

.apply-btn {
  background-color: #3b82f6;
  color: #fff;
}

/* 加载和空状态 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: #3b82f6;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.empty-tip {
  font-size: 24rpx;
}