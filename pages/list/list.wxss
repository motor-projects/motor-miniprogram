/* pages/list/list.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-right: 1rpx solid #e5e5e5;
  position: relative;
}

.filter-item:last-child {
  border-right: none;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  z-index: 11;
}

.filter-content {
  max-height: 400rpx;
  padding: 0 20rpx;
}

.filter-option {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.filter-option.active {
  color: #3b82f6;
  font-weight: bold;
}

.filter-option:last-child {
  border-bottom: none;
}

/* 价格筛选 */
.price-range {
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.price-slider {
  padding: 20rpx 0;
}

.price-presets {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.preset-item {
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
}

.preset-item.active {
  background-color: #3b82f6;
  color: #fff;
}

/* 蒙层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9;
}

/* 摩托车列表 */
.motorcycle-list {
  flex: 1;
}

.list-header {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.total-count {
  font-size: 24rpx;
  color: #666;
}

.view-mode {
  display: flex;
  gap: 20rpx;
}

.mode-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

.mode-btn.active {
  color: #3b82f6;
}

/* 网格视图 */
.grid-view {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.grid-item .motorcycle-image {
  width: 100%;
  height: 200rpx;
}

.grid-item .motorcycle-info {
  padding: 20rpx;
}

.grid-item .motorcycle-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid-item .motorcycle-year {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
}

.grid-item .motorcycle-price {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
}

.grid-item .motorcycle-specs {
  display: flex;
  gap: 16rpx;
}

.grid-item .spec-item {
  font-size: 20rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 列表视图 */
.list-view {
  padding: 0 20rpx;
}

.list-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  position: relative;
}

.list-item .motorcycle-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.list-item .motorcycle-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item .info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.list-item .motorcycle-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.list-item .motorcycle-year {
  font-size: 22rpx;
  color: #999;
}

.list-item .motorcycle-price {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.list-item .motorcycle-specs {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.list-item .spec-item {
  font-size: 24rpx;
  color: #666;
}

.rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #f59e0b;
  font-weight: bold;
}

.rating-text {
  font-size: 22rpx;
  color: #999;
}

/* 操作栏 */
.action-bar {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.favorite-btn, .compare-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.favorite-btn.favorited {
  color: #ef4444;
}

.compare-btn {
  font-size: 20rpx;
}

/* 加载状态 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-text {
  color: #3b82f6;
  font-size: 28rpx;
}

.loading {
  padding: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.empty-tip {
  font-size: 24rpx;
}

/* 对比浮窗 */
.compare-float {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.compare-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.compare-count {
  font-size: 24rpx;
  color: #666;
}

.compare-items {
  display: flex;
  gap: 8rpx;
  flex: 1;
}

.compare-thumb {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
}

.compare-btn-primary {
  background-color: #3b82f6;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .grid-view {
    grid-template-columns: 1fr;
  }
  
  .list-item {
    flex-direction: column;
  }
  
  .list-item .motorcycle-image {
    width: 100%;
    height: 200rpx;
  }
}