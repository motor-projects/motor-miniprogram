<!--index.wxml-->
<view class="page">
  <!-- 搜索框 -->
  <view class="search-bar">
    <view class="search-input" bindtap="goToSearch">
      <icon type="search" size="16" color="#999"></icon>
      <text class="placeholder">搜索摩托车型号、品牌</text>
    </view>
  </view>

  <!-- 轮播图 -->
  <swiper class="banner" indicator-dots="{{true}}" autoplay="{{true}}" interval="3000">
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image src="{{item.image}}" mode="aspectFill" class="banner-image"></image>
    </swiper-item>
  </swiper>

  <!-- 快捷分类 -->
  <view class="categories">
    <view class="category-item" wx:for="{{categories}}" wx:key="name" bindtap="selectCategory" data-category="{{item.name}}">
      <image src="{{item.icon}}" class="category-icon"></image>
      <text class="category-name">{{item.name}}</text>
    </view>
  </view>

  <!-- 热门摩托车 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">热门摩托车</text>
      <text class="section-more" bindtap="goToList">查看更多 ></text>
    </view>
    <scroll-view class="motorcycle-list" scroll-x="{{true}}" show-scrollbar="{{false}}">
      <view class="motorcycle-item" wx:for="{{hotMotorcycles}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
        <image src="{{item.images[0].url}}" class="motorcycle-image" mode="aspectFill"></image>
        <view class="motorcycle-info">
          <text class="motorcycle-name">{{item.brand}} {{item.model}}</text>
          <text class="motorcycle-price">¥{{item.price.msrp}}</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 最新动态 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">最新动态</text>
    </view>
    <view class="news-list">
      <view class="news-item" wx:for="{{news}}" wx:key="id">
        <image src="{{item.image}}" class="news-image" mode="aspectFill"></image>
        <view class="news-content">
          <text class="news-title">{{item.title}}</text>
          <text class="news-time">{{item.time}}</text>
        </view>
      </view>
    </view>
  </view>
</view>